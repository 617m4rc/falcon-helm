{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "falcon": {
            "type": "object",
            "required": [
                "cid"
              ],
            "properties": {
                "aid": {
                    "type": "null"
                },
                "apd": {
                    "type": "null"
                },
                "aph": {
                    "type": "null"
                },
                "app": {
                    "type": "null"
                },
                "assert": {
                    "type": "null"
                },
                "billing": {
                    "type": "null",
                    "enum": ["metered"]
                },
                "cid": {
                    "type": "null",
                    "pattern": "^[0-9a-zA-Z]{32}-[0-9a-zA-Z]{2}$"
                },
                "feature": {
                    "type": "null"
                },
                "memfail_every_n": {
                    "type": "null"
                },
                "memfail_grace_period": {
                    "type": "null"
                },
                "message_log": {
                    "type": "null"
                },
                "provisioning_token": {
                    "type": "null"
                },
                "trace": {
                    "type": "null"
                },
                "update": {
                    "type": "null"
                }
            }
        },
        "node": {
            "type": "object",
            "required": [
                "enabled"
              ],
            "properties": {
                "daemonset": {
                    "type": "object",
                    "required": [
                        "updateStrategy"
                      ],
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "labels": {
                            "type": "object"
                        },
                        "updateStrategy": {
                            "type": "string",
                            "default": "RollingUpdate"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean",
                    "default": "true"
                },
                "fullnameOverride": {
                    "type": "string"
                },
                "image": {
                    "type": "object",
                    "required": [
                        "repository",
                        "pullPolicy",
                        "tag"
                      ],
                    "properties": {
                        "pullPolicy": {
                            "type": "string",
                            "default": "Always",
                            "pattern": "^(Always|Never|IfNotPresent)$"
                        },
                        "repository": {
                            "type": "string",
                            "default": "Always"
                        },
                        "tag": {
                            "type": "string",
                            "default": "latest"
                        }
                    }
                },
                "nameOverride": {
                    "type": "string"
                },
                "podAnnotations": {
                    "type": "object"
                },
                "terminationGracePeriod": {
                    "type": "integer",
                    "default": "10"
                }
            }
        }
    }
}